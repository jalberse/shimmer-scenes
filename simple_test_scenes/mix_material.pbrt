LookAt 0 -100 0
  0 0 0
  0 0 1
Camera "perspective"
    "float fov" [ 39 ]
Film "rgb"
    "string filename" [ "sphere_materials.pfm" ]
    "integer yresolution" [ 480 ]
    "integer xresolution" [ 480 ]
Sampler "independent"
  "integer pixelsamples" 100
Integrator "path"
Accelerator "bvh"
  "string splitmethod" "middle"

WorldBegin

# light source
# uniform blue-ish illumination from all directions
LightSource "infinite" "rgb L" [ .8 .8 .8 ]

MakeNamedMaterial "mat1"
    "string type" [ "diffuse" ]
    "rgb reflectance" [ 0.9 0.0 0.0 ]

MakeNamedMaterial "mat2"
    "string type" [ "diffuse" ]
    "rgb reflectance" [ 0.0 0.0 9.0 ]

AttributeBegin
    Material "mix"
        "string materials" [ "mat1" "mat2" ]
        # will mix to purple
        "float amount" 0.5
    Translate 0 0 0
    Shape "sphere"
        "float radius" [ 10 ]
AttributeEnd
