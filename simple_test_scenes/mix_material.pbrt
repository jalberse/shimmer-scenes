LookAt 0 -100 0
  0 0 0
  0 0 1
Camera "perspective"
    "float fov" [ 39 ]
Film "rgb"
    "string filename" [ "sphere_materials.pfm" ]
    "integer yresolution" [ 480 ]
    "integer xresolution" [ 480 ]
Sampler "independent"
  "integer pixelsamples" 1
Integrator "path"
Accelerator "bvh"
  "string splitmethod" "middle"

WorldBegin

# light source
# uniform blue-ish illumination from all directions
LightSource "infinite" "rgb L" [ .4 .4 .5 ]

AttributeBegin
    Material "diffuse"
        "rgb reflectance" [ 0 0 0 ]
    Translate 0 0 30
    AreaLightSource "diffuse"
        "rgb L" [ 1000 1000 1000 ]
    Shape "sphere"
        "float radius" [ 10 ]
AttributeEnd

MakeNamedMaterial "mat1"
    "string type" [ "diffuse" ]
    "rgb reflectance" [ 0.7 0.7 0.7 ]

MakeNamedMaterial "mat2"
    "string type" [ "diffuse" ]
    "rgb reflectance" [ 0.0 0.0 0.0 ]

AttributeBegin
    Material "mix"
        "string materials" [ "mat1" "mat2" ]
    Translate 0 0 0
    Shape "sphere"
        "float radius" [ 10 ]
AttributeEnd
