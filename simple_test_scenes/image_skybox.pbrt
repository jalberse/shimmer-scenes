LookAt 0 -100 0
  0 0 0
  0 0 1
Camera "perspective"
    "float fov" [ 39 ]
Film "rgb"
    "string filename" [ "sphere_materials.pfm" ]
    "integer yresolution" [ 480 ]
    "integer xresolution" [ 480 ]
Sampler "independent"
  "integer pixelsamples" 1000
Integrator "simplepath"
Accelerator "bvh"
  "string splitmethod" "middle"

WorldBegin

AttributeBegin
    Rotate 220 0 1 0
    Rotate 90 1 0 0
    LightSource "infinite"
        "float scale" [6]
        "string filename" "textures/sky.png"
AttributeEnd

AttributeBegin
    Material "diffuse"
        "rgb reflectance" [ 0.1 0.1 0.8 ]
    Translate 0 0 0
    Shape "sphere"
        "float radius" [ 10 ]
AttributeEnd

AttributeBegin
    Material "dielectric"
    Translate 21 0 0
    Shape "sphere"
        "float radius" [ 10 ]
AttributeEnd

AttributeBegin
    Material "conductor"
    Translate -21 0 0
    Shape "sphere"
        "float radius" [ 10 ]
AttributeEnd
